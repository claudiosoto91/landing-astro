---
import projects from '../../config/projects.json'
---

<h2 class="font-bold text-5xl my-5 text-center">Projects</h2>


{
    projects.map((project) => (
        <div class="flex flex-col md:flex-row mx-2 text-center">
            <div class="flex-1">
                <h3 class="font-bold text-2xl my-4">{project.title}</h3>
                <p class="my-4">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
                    More info
                </button>
            </div>
            <div class="flex-1 my-2">
                <img src={project.image} alt="" class="w-72 m-auto">
            </div>
        </div>
    ))
}
